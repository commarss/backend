{
  "index_patterns": ["es_restaurants"],
  "template": {
    "settings": {
      "analysis": {
        "analyzer": {
          "korean": {
            "type": "custom",
            "tokenizer": "nori_tokenizer"
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "id": {
          "type": "keyword"
        },
        "name": {
          "type": "text",
          "analyzer": "korean"
        },
        "details": {
          "type": "text",
          "analyzer": "korean"
        },
        "average_rate": {
          "type": "double"
        },
        "location": {
          "type": "geo_point"
        },
        "address": {
          "type": "text",
          "analyzer": "korean"
        },
        "restaurant_category": {
          "type": "keyword"
        }
      }
    }
  }
}